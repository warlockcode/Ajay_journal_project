<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_margin="5dp"
app:cardCornerRadius="8dp"
android:layout_width="match_parent"
android:layout_height="wrap_content">
<LinearLayout
    android:background="@color/redBg"
    android:alpha="0.8"
    android:elevation="10dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:gravity="end"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/home_row_profile"
        android:layout_width="30dp"
        android:layout_height="33dp"
        android:src="@drawable/outline_account_circle_black_20">
    </de.hdodenhof.circleimageview.CircleImageView>
    <TextView
        android:id="@+id/homerow_Username"
        android:textColor="@android:color/black"
        android:text="Gina"
        android:layout_weight="1"
        android:padding="3dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="visible"
        android:gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/home_image_List"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:scaleType="fitXY"
            android:src="@drawable/image_three" />

        <TextView
            android:id="@+id/home_title_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Title"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/home_thought_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:paddingStart="10dp"
            android:paddingTop="15dp"
            android:paddingEnd="10dp"
            android:text="Thoughts.."
            android:textSize="18sp" />

        <TextView
            android:id="@+id/home_timestamp_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Date Created" />
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/like_button_home"
        android:layout_width="37dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:padding="2dp"
        android:src="@drawable/outline_favorite_border_black_20">

    </ImageView>

    <ImageView
        android:id="@+id/comment_home"
        android:layout_width="40dp"
        android:layout_height="34dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:padding="2dp"
        android:src="@drawable/outline_chat_bubble_outline_black_20">

    </ImageView>


</LinearLayout>
        <TextView
            android:id="@+id/likedList_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Liked by 0 ">

        </TextView>

    </LinearLayout>

</androidx.cardview.widget.CardView>